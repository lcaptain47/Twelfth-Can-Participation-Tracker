<!DOCTYPE html>
<html>
  <head>
    <title>TwelthCan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%if current_user != nil%>
  <nav class="navbar navbar-expand-lg navbar-dark navbar-color shadow">
    <%= link_to image_tag('WhiteLogoWithSlogan.png', class: "smol"), root_path, class: "navbar-brand"%>
    

    <div>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Homepage", root_path, class: "nav-link"%>
        </li>
        <li class="nav-item active">
          <%= link_to "Tutorials", tutorial_page_path, class: "nav-link"%>
        </li>
        <li class="nav-item active">
          <%= link_to "User Index Page", users_path, class: "nav-link"%>
        </li>
        <% if current_user.user_role.can_create %>
          <li class="nav-item active">
            <%= link_to "New Event", new_event_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item active">
          <%= link_to "#{current_user.full_name}'s Page", user_path(current_user), class: "nav-link"%>
        </li>
        <li class="nav-item active">
          <%= link_to "Sign Out", destroy_user_session_path, class: "nav-link"%>
        </li>

        
        
        
        
      </ul>

      
    
          
        
    </div>
  </nav>

  <% end %>  

  <body class="d-flex flex-column">
  

    
    <div class = "page-content">
      <div class="container">
        <% flash.each do |name,msg| %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= msg %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
        </div>
        <%= yield %>
    </div>
    
    
  </body>
</html>
