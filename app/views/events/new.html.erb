<%= form_with(model: Event.new, local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :date %>
    <%= f.date_select :date%>
    
    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :volunteers %>
    <%= f.number_field :volunteers, min: 0, max: 20 %>

    <%= f.label :front_desks %>
    <%= f.number_field :front_desks, min: 0, max: 20%>

    <%= f.label :runners %>
    <%= f.number_field :runners, min: 0, max: 20%>

    <%= f.submit %>
<% end %>

<%= link_to "Homepage", events_path %>