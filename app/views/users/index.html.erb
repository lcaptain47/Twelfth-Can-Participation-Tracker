<div class = "container">
    <h3 class= "my-2" style="text-align:center;"> User Index </h3>
    
    <div class="row justify-content-center">
        <%= link_to "Search" , search_page_path, class: "btn btn-dark my-2" %> 
    </div>
    
    

    <div class="row justify-content-md-center">
        <table class="listing table table-striped" summary="List of all users">

            <% @users.each do |user| %>
                <tr class="p">
                    <td><%= link_to user.full_name,user_path(user) %>
                    <td> Total Approved Hours: <%= user.total_approved_hours / 60 %>
                    <td> Total Unapproved Hours: <%= user.total_unapproved_hours / 60 %>
                    <td> User Role: <%= user.user_role.name %>
                    </td>
                </tr>
        <% end %>
        </table>
    </div>
</div>

<br>
