<p>Name: <%= @user.full_name %> </p>
<p>Total Approved Hours: <%= @user.total_approved_hours %> </p>
<p>Total Unapproved Hours: <%= @user.total_unapproved_hours %> </p>
<p>User Role: <%= @user.user_role.name %> </p>

<%= link_to "Homepage", root_path %>


<% if current_user.user_role.can_delete_users && current_user.id == @user.id %>

    <%= link_to "System Wipe" , wipe_all_path , method: :post , data: {confirm: "You are about to delete every normal user account in this database, Only the president and officers will be unaffected. Are you sure you want to continue?"} %>
<% elsif  current_user.user_role.can_delete_users %>
    <%= link_to "Delete User" , user_path(@user) , method: :delete , data: {confirm: "Are you sure you want to delete this user?"}%>
<% end %>
