<div class="row justify-content-center my-2">
    <%= form_with(model: @timeslot, local: true) do |f| %>
        
        <div class = "form-group my-2">
            <%= f.label :start_time %>
            <%= f.time_select :start_time, minute_step: 30, class: "form-control" %>
        </div>
        
        <div class = "form-group my-2">
            <%= f.label :end_time %>
            <%= f.time_select :end_time, minute_step: 30, class: "form-control" %>
        </div>

        <div class = "form-group my-2">
            <%= f.label :count %>
            <%= f.number_field :count, step: 10, min: 10, max: 60, class: "form-control" %>
        </div>

        <%= f.hidden_field :event_id %>

        <div class = "actions my-2">
            <p>
                <%= f.submit "Create Timeslot", class: "btn btn-success" %>
            </p>
        </div>

    <% end %>
</div>
